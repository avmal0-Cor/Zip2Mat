<Window x:Class="Zip2Mat.GUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Zip2Mat.GUI"
        WindowStartupLocation="CenterScreen"
        mc:Ignorable="d"
        Title="s2convert_tools" Height="225" Width="325">
    <Grid>
        <StackPanel Name="pnlDrop" Drop="StackPanel_Drop" AllowDrop="true" Margin="10,10,10,59">
            <Grid>
                <Label VerticalAlignment="Top" HorizontalAlignment="Center" Margin="0,60,0,0">Drag zip(s) here</Label>
            </Grid>
        </StackPanel>
        <Grid Margin="0,150,162,0">
            <CheckBox Name="chkTga" VerticalAlignment="Center" HorizontalAlignment="Center" IsChecked="True">Convert to TGA</CheckBox>
        </Grid>
        <Grid Margin="162,150,0,0">
            <CheckBox Name="chkNormalize" VerticalAlignment="Center" HorizontalAlignment="Center" IsChecked="True">Normalize names</CheckBox>
        </Grid>
    </Grid>
</Window>
