<Window x:Class="Zip2Mat.GUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Zip2Mat.GUI"
        WindowStartupLocation="CenterScreen"
        mc:Ignorable="d"
        Title="Zip2Mat" Height="225" Width="325">
    <Grid>
        <StackPanel Name="ImagePanel" Drop="StackPanel_Drop" AllowDrop="true" Margin="10,10,10,40">
            <Grid>
                <Label VerticalAlignment="Top" HorizontalAlignment="Center" Margin="0,60,0,0">Drag ur zip here</Label>
            </Grid>
        </StackPanel>
        <Grid Margin="0,150,150,0">
            <CheckBox VerticalAlignment="Center" HorizontalAlignment="Center" IsChecked="True">Convert to TGA</CheckBox>
        </Grid>
        <Grid Margin="150,150,0,0">
            <CheckBox VerticalAlignment="Center" HorizontalAlignment="Center" IsChecked="True">Normalize names</CheckBox>
        </Grid>
    </Grid>
</Window>
